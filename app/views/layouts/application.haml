!!!
%html
  %head
    %title= @page_title ? "#{@page_title} | Web Console" : "Web Console"
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags
  %body  
    = render 'shared/web_console', :initial => "Rails 3.2.8: #{Rails.env} environment", :id => 'rails'
    = render 'shared/web_console', :initial => "Press tab to list all commands", :id => 'music'
    #wrapper
      = render 'shared/header'
      
      - if flash.keys.present?
        .flash-messages
          - flash.each do |key, msg|
            %div{:class => key}
              = msg

      %section.page
        = yield
      %footer
        #{link_to raw("#{image_tag 'github.png'}<span>Paxa</span>"), "http://github.com/Paxa"}
  = javascript_include_tag "application"
  = javascript_include_tag "http://s0.railsrumble.com/banner.js"
  = yield :scripts